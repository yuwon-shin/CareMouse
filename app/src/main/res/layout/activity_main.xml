<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#e2f3ff">

    <!--init-->
    <RelativeLayout
        android:id="@+id/initLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="#e2f3ff">


        <ImageButton
            android:id="@+id/buttonScan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin = "16dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_bluetooth_disabled_24"
            android:text="Scan" />



        <ImageView
            android:id="@+id/introImg"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/buttonScan"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/introimage" />

        <TextView
            android:id="@+id/careMouseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/introImg"
            android:layout_centerHorizontal="true"
            android:text="Care Mouse For you"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/careMouseDescription"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/careMouseName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:textSize="16dp"
            android:text="Shall we relieve wrist pain caused by work \n for a long time?"
            />
        <Button
            android:id="@+id/btnStartTrain"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@id/careMouseDescription"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="#8cc2f5"
            android:text="Training"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnStartCollectingData"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/etClassLabel"
            android:layout_alignStart="@+id/etClassLabel"
            android:background="#8cc2f5"
            android:text="Train_Start" />

        <Button
            android:id="@+id/btnFinishCollectingData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etClassLabel"
            android:layout_alignEnd="@+id/etClassLabel"
            android:text="Train_End" />

        <EditText
            android:id="@+id/etClassLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/careMouseDescription"
            android:ems="10">
            <requestFocus />

        </EditText>

        <Button
            android:id="@+id/btnStartTestingModel"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="#8cc2f5"
            android:text="TEST_START" />


        <Button
            android:id="@+id/btnFinishTestingModel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TEST_END" />

        <Button
            android:id="@+id/btnStretchStart"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_below="@+id/btnStartTrain"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:background="#3d7cb8"
            android:text="Stretch"
            android:textColor="@color/white" />

    </RelativeLayout>

    <!--Go home-->
    <RelativeLayout
        android:id="@+id/backspace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/btnGohome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_baseline_home_24" />
    </RelativeLayout>


    <!--stretch1 layout-->
