        <TextView
            android:id="@+id/stretchText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="Stretching"
            android:textStyle="bold"
            android:textColor="#3d7cb8"
            android:textSize="50dp" />

        <ImageView
            android:id="@+id/stretchImg1"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/stretchText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/stretch1" />

        <TextView
            android:id="@+id/stretchName1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stretchImg1"
            android:layout_centerHorizontal="true"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="Motion1 : Extension"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/stretchDescription1"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/stretchName1"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:text="Hold your mouse and bend your wrist so that your palms face forward."
            android:textSize="15dp" />

    </RelativeLayout>

